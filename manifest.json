{
  "manifest_version": 2,

  "name": "Universal Word",
  "description": "Translate a word easily in the youtube subtitle",
  "version": "1.0",
  "icons": {
    "19": "icons/icon19.png",
    "38": "icons/icon38.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/icon19-disabled.png",
      "38": "icons/icon38-disabled.png"
    },
    "default_title": "Click for toggle!"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  }
}