{
  "manifest_version": 2,

  "name": "Universal Word",
  "description": "Translate a word easily in the youtube subtitle",
  "version": "1.1.0",

  "background": {
    "persistent": false,
    "scripts": ["src/background.js"]
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": ["src/content.css"],
    "js": ["src/content.js"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  }
}