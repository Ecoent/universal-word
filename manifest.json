{
  "manifest_version": 2,

  "name": "Universal Word",
  "description": "Translate a word easily in the youtube subtitle",
  "version": "1.2.0",
  "options_ui": {
    "page": "src/options/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": ["src/content/content.css"],
    "js": ["src/content/content.js"],
    "all_frames": true
  }],

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}